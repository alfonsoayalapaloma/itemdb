<% content_for :body_content_title do %>
  <%= @item.nombre %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Nombre</h1>
    <p>
      <%=raw @item.nombre %>
    </p>
  </section>
  <section>
    <h1>Id</h1>
    <p>
      <%=raw @item.id %>
    </p>
  </section>
  <section>
    <h1>Descripcion</h1>
    <p>
      <%=raw @item.descripcion %>
    </p>
  </section>
  <section>
    <h1>Cantidad</h1>
    <p>
      <%=raw @item.cantidad %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @item.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Ficha</h1>
    <p>
      <%= image_fu @item.ficha, nil %>
    </p>
  </section>
  <section>
    <h1>Troubleshooting</h1>
    <p>
      <%= image_fu @item.troubleshooting, nil %>
    </p>
  </section>
  <section>
    <h1>Homologacion</h1>
    <p>
      <%=raw @item.homologacion %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @item.date %>
    </p>
  </section>
  <section>
    <h1>Comentarios</h1>
    <p>
      <%=raw @item.comentarios %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="items">
      <% @items.each do |item| %>
        <li>
          <%= link_to item.nombre, refinery.items_item_path(item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
