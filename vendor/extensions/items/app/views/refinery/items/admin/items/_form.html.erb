<%= form_for [refinery, :items_admin, @item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @item,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :nombre -%>
    <%= f.text_field :nombre, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :id -%>
    <%= f.text_field :id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :descripcion -%>
    <%= f.text_field :descripcion  -%>

  </div>
  
  <div class='field'>
    <%= f.label :cantidad -%>
    <%= f.number_field :cantidad  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @item.photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :ficha -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :ficha_id,
               :image => @item.ficha,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :troubleshooting -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :troubleshooting_id,
               :image => @item.troubleshooting,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :homologacion -%>
    <%= f.text_field :homologacion  -%>

  </div>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date  -%>

  </div>
  
  <div class='field'>
    <%= f.label :comentarios -%>
    <%= f.text_field :comentarios  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.items.admin.items.item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @item.nombre) %>
<% end -%>
